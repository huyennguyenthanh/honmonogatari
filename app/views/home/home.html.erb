
    <h1>ホームページ</h1>
    <h1>Books</h1>

    <div>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Num of chapters</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.num_of_chapters %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <%= link_to 'Add new book', new_book_path %>
    </div>
    
    <div class="button">
        <%= button_to 'Logout', '/logout', :method => :delete %>
    </div>  
